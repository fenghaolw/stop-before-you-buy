{
    "manifest_version": 3,
    "name": "Stop Before You Buy",
    "version": "1.0.0",
    "description": "Chrome extension to prevent duplicate game purchases",
    "permissions": [
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "*://*.steampowered.com/*",
        "*://*.epicgames.com/*",
        "*://*.gog.com/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.steampowered.com/*",
                "*://*.epicgames.com/*",
                "*://*.gog.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}